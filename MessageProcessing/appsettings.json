{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RabbitMQConfig": {
    "HostName": "localhost",
    "ExchangeName": "ServerStatisticsExchange",
    "ExchangeType": "topic"
  },
  "MongoDBConfig": {
    "ConnectionString": "mongodb://localhost:27017",
    "Database": "ServerStatistics"
  },
  "AnomalyDetectionConfig": {
    "MemoryUsageAnomalyThresholdPercentage": 0.4,
    "CpuUsageAnomalyThresholdPercentage": 0.5,
    "MemoryUsageThresholdPercentage": 0.8,
    "CpuUsageThresholdPercentage": 0.9
  },
  "SignalRConfig": {
    "SignalRUrl": "/serverHub"
  }
}
